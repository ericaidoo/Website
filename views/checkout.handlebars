
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>SV - Items</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
		<header>
		<h1>Summary Screen</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
   
    <table class="center">
            <tr><th>Name</th><th>Price</th><th>Qty</th></tr>
    {{#each all}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
<!--         <td><img src="images/{{this.photo}}" /></td> -->
        <td>{{this.qty}}</td>
       </tr> 
    {{/each}}
      <p>Total : &#163;{{total}}</p>
</table> 
       
      <a href="/sv/buy">Buy Now</a>
      <a href="/sv">Cancel</a>
    
		</main>
   </body>
</html>
